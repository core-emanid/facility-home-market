---
interface Props {
    bgColor: string;
    textColor: string;
    text?: string;
    borderColor?: string;
    radius?: boolean;
}

const { bgColor, textColor, text, borderColor, radius } = Astro.props;
---

<span
    class={`p-4 mt-10 ${borderColor ? `border-4 border-${borderColor}` : ""} ${radius ? "rounded-full" : ""}`}
>
    <a
        href="#contact"
        type="button"
        style=`color: ${textColor}; background-color: ${bgColor};`
        class={`text-center py-4 px-4 lg:py-6 lg:px-8 font-bold text-sm lg:text-lg rounded-full w-fit`}
        >{text ?? "Quero no meu condom√≠nio"}</a
    >
</span>

