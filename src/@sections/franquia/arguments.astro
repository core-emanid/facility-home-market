---
import Btn from "../../components/cta-button.astro";

// Benefits data
const benefits = [
    "Auxílio na escolha do ponto",
    "Projeto arquitetônico padrão",
    "Cadeia de fornecedores homologados",
    "Treinamento e suporte contínuo",
    "Baixo custo operacional",
    "Boa margem de lucro",
    "Facilidade com escala",
    "Tecnologia e automação",
    "Marketing ativo"
];
---

<section class="relative py-16 sm:py-20 lg:py-24 px-6 sm:px-8 lg:px-12 overflow-hidden">
    <!-- Blue Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-blue-600"></div>
    
    <div class="max-w-7xl mx-auto relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            <!-- Left Section: Main Message & CTA -->
            <div class="text-white space-y-8 sm:space-y-10 lg:space-y-12">
                <!-- Main Heading -->
                <div>
                    <h2 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold leading-tight">
                        Temos responsabilidade e na{" "}
                        <span class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl">Facility</span>, 
                        franqueados não são apenas números!
                    </h2>
                </div>

                <!-- Call to Action Button -->
                <div class="pt-4">
                    <Btn
                        bgColor="transparent"
                        textColor="#FFFFFF"
                        text="FALAR COM O DIRETOR DE EXPANSÃO"
                        borderColor="#FFFFFF"
                    />
                </div>
            </div>

            <!-- Right Section: Benefits List -->
            <div class="text-white">
                <div class="space-y-4 sm:space-y-5 lg:space-y-6">
                    {benefits.map((benefit) => (
                        <div class="flex items-start space-x-3 sm:space-x-4">
                            <!-- Checkmark Icon -->
                            <div class="flex-shrink-0 mt-1">
                                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                </svg>
                            </div>
                            
                            <!-- Benefit Text -->
                            <p class="text-lg sm:text-xl lg:text-2xl font-normal leading-relaxed">
                                {benefit}
                            </p>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </div>
</section>

