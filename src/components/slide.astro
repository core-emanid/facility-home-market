---
import { Picture } from "astro:assets";

const {
    title,
    imageUrl,
    description
} = Astro.props;
---

<div class="card w-fit shadow-xl rounded-xl p-4">
    <Picture loading='lazy' src={imageUrl}
              height={200} width={200} format="jpg"
              class="rounded-full" aria-label="Rafael picture" alt=`${description}` />

    <h3 class="text-center pt-4 font-extrabold text-lg">{title}</h3>
</div>