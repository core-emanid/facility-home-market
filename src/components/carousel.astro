<div class="swiper" role="region" aria-label="carousel">
    <div class="swiper-wrapper" role="group">
        <div class="swiper-slide my-8 text-center" role="group" aria-roledescription="Slide">Slide 1</div>
        <div class="swiper-slide my-8 text-center" role="group" aria-roledescription="Slide">Slide 2</div>
