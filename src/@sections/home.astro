---
import { Image } from "astro:assets";
import bannerImg from "../images/Banner-inicial.png"
import Btn from "../components/cta-button.astro";
import logo from "../images/logo-facility-home-market-footer.svg";
---
<main class="flex flex-col-reverse bg-secondary items-center justify-center py-12 lg:p-8 lg:pb-40 lg:flex-row ">
    
    <section class="flex flex-row max-lg:mb-40">
        <div class="flex flex-col items-center text-left lg:p-0 lg:block lg:w-[85%]">
            <span class="flex flex-col text-3xl md:text-4xl lg:text-5xl lg:mb-20 font-extrabold text-base-100 max-lg:text-center lg:space-y-5 lg:text-nowrap">
                <p>Praticidade, economia</p> 
                <p>e qualidade de vida</p>
                <p>para você e para sua família!</p>
            </span>
            <Btn bgColor="#FFF" textColor="#494f4f"/>
        </div>
    </section>
    

    <section class="flex flex-col w-fit m-6 max-lg:items-center">
        <div class="grid grid-cols-4 grid-rows-4 w-[300px] h-[300px] lg:w-[650px] lg:h-[650px] rounded-full bg-home bg-cover max-sm:py-8">
            
            <div class="bg-base-100 h-fit w-fit py-1 px-2 md:py-2 md:px-3 max-sm:mb-4 rounded-full self-end justify-self-end">
                
                <!-- desktop -->
                <div class="hidden lg:block">
                    <Image src={logo} width={40} alt="test"/>   
