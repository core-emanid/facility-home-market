---
import Image from "astro/components/Image.astro";
import logo from "../images/logo-facility-home-market-footer.svg";
import Card from "../components/card.astro";
import avatarPic from "../images/2a-Monitoramento-com-cameras.png";
import Btn from "../components/cta-button.astro";
import ReviewCarousel from "../components/review-carousel.astro";
---

<section class="flex flex-col items-center pt-8 pb-20 max-lg:px-4" id="reviews">
    <h2 class="text-4xl lg:text-5xl text-center font-extrabold py-8">Quem tem Facility em casa <br>usa e aprova...</h2>
    
    <div class="flex flex-col">
        <ReviewCarousel />
    </div>

    <Btn bgColor="#ff9549" textColor="#FFF"/>
</section>

<div class="flex justify-center mb-[-80px] lg:relative max-lg:px-4">
    <div class="max-lg:relative  max-lg:mb-[40px]">
        <div class="w-fit bg-base-100 py-8 px-12 rounded-full shadow-md">
            <Image src={logo} loading="lazy"
                height={100} width={100} alt="picture" />
        </div>
    </div>
</div>
